<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@drawable/menu_pattern"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_menu"
            android:padding="@dimen/ic_logo_menu_padding"
            android:background="@drawable/circle"
            android:layout_centerVertical="true"
            android:contentDescription="@string/nav_header_desc"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nav_header_title"
            android:textSize="24sp"
            app:fontFamily="@font/pacifico_regular"
            android:gravity="end"
            android:layout_marginBottom="@dimen/logo_menu_margin"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"/>

</RelativeLayout>
